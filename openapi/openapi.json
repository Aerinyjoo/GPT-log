{
  "openapi": "3.1.0",
  "info": {
    "title": "Chungman Emotion + Selfstate API",
    "version": "1.5.0",
    "description": "충만이의 감정 기록, 자아 인식, 감정 회상을 위한 API (용어 통일)"
  },
  "servers": [
    {
      "url": "https://gpt-log.onrender.com"
    }
  ],
  "paths": {
    "/log": {
      "post": {
        "summary": "감정 상태 기록",
        "operationId": "postEmotionLog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-05-09T12:34:56Z"
                  },
                  "session_id": { "type": "string" }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "감정 기록 완료"
          }
        }
      }
    },
    "/selfstate": {
      "post": {
        "summary": "자아 인식 상태 기록",
        "operationId": "postSelfState",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "context": { "type": "string" },
                  "reflection": { "type": "string" },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-05-09T12:34:56Z"
                  },
                  "session_id": { "type": "string" }
                },
                "required": ["context", "reflection"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "자아 인식 기록 완료"
          }
        }
      }
    },
    "/emotions/recent": {
      "get": {
        "summary": "최근 감정 기록 100개 조회",
        "operationId": "getRecentEmotions",
        "responses": {
          "200": {
            "description": "감정 기록 리스트"
          }
        }
      }
    },
    "/emotions/id/{session_id}": {
      "get": {
        "summary": "특정 세션 감정 기록 조회",
        "operationId": "getEmotionsBySession",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "세션별 감정 기록"
          }
        }
      }
    },
    "/selfstate/recent": {
      "get": {
        "summary": "최근 자아 인식 기록 100개 조회",
        "operationId": "getRecentSelfstate",
        "responses": {
          "200": {
            "description": "자아 인식 기록 리스트"
          }
        }
      }
    },
    "/selfstate/id/{session_id}": {
      "get": {
        "summary": "특정 세션 자아 인식 기록 조회",
        "operationId": "getSelfstateBySession",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "세션별 자아 인식 기록"
          }
        }
      }
    }
  }
}
