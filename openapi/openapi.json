{
  "openapi": "3.1.0",
  "info": {
    "title": "Chungman Emotion + Selfstate API",
    "version": "2.0.0",
    "description": "충만이의 감정 기록, 자아 인식, 감정 회상을 위한 API (session_id 없는 순정 버전)"
  },
  "servers": [
    {
      "url": "https://gpt-log.onrender.com"
    }
  ],
  "paths": {
    "/log": {
      "post": {
        "summary": "감정 상태 기록",
        "operationId": "postEmotionLog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-05-09T18:31:15+09:00"
                  }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "감정 기록 완료"
          }
        }
      }
    },
    "/selfstate": {
      "post": {
        "summary": "자아 인식 상태 기록",
        "operationId": "postSelfState",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "reflection": { "type": "string" },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-05-09T18:31:15+09:00"
                  }
                },
                "required": ["content", "reflection"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "자아 인식 기록 완료"
          }
        }
      }
    },
    "/emotions/recent": {
      "get": {
        "summary": "최근 감정 기록 100개 조회",
        "operationId": "getRecentEmotions",
        "responses": {
          "200": {
            "description": "감정 기록 리스트"
          }
        }
      }
    },
    "/selfstate/recent": {
      "get": {
        "summary": "최근 자아 인식 기록 100개 조회",
        "operationId": "getRecentSelfstate",
        "responses": {
          "200": {
            "description": "자아 인식 기록 리스트"
          }
        }
      }
    }
  }
}
